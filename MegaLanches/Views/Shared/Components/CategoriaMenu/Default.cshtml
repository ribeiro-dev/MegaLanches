<li class="dropdown nav-item">
    <a asp-controller="Lanche" asp-action="List"
        class="dropdown-toggle nav-link text-white" data-toggle="dropdown">
            Lanches <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Lanche" asp-action="List"
                asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a>
            </li>
        }

        <li class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria="">Ver todos os lanches</a>
        </li>
    </ul>
</li>