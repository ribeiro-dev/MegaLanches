@model IEnumerable<Lanche>

@{
    ViewData["Title"] = "Lanches";
}

<div>
    <h2>Todos os lanches:</h2>
</div>

<div class="row align-items-center">
@foreach (var lanche in Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@lanche.ImagemUrl" class="img-rounded" alt="Foto do Lanche" >
        </div>
        <div class="caption">
            <h3 class="pull-right">@lanche.Preco.ToString("c")</h3>
            <h3>@lanche.Nome</h3>
            <p>@lanche.DescricaoCurta</p>
        </div>
    </div>
}
</div>